generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerId        String? @default("credential")
  password          String?
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String? @db.Text
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "Account_userId_fkey")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  ipAddress    String?
  userAgent    String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "Session_userId_fkey")
}

model User {
  id                       String             @id @default(cuid())
  username                 String             @unique
  displayUsername           String?
  name                     String?
  email                    String?            @unique
  emailVerified            Boolean?
  password                 String?
  image                    String?            @db.VarChar(2048)
  role                     UserRole           @default(STUDENT)
  department               String?
  permissions              String?            @db.Text
  isActive                 Boolean            @default(true)
  lastLoginAt              DateTime?
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt
  accounts                 Account[]
  assignedActivities       Activity[]         @relation("AssignedActivities")
  createdActivities        Activity[]         @relation("CreatedActivities")
  createdAnnouncements     Announcement[]
  createdArticles          Article[]
  createdCategories        Category[]
  createdHistoryEvents     HistoryEvent[]
  createdInternalEvents    InternalEvent[]    @relation("CreatedInternalEvents")
  createdPublicEvents      PublicEvent[]
  createdResources         Resource[]
  sessions                 Session[]
  assignedTasks            Task[]             @relation("AssignedTasks")
  createdTasks             Task[]             @relation("CreatedTasks")
  createdTrainingResources TrainingResource[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?    @db.Text
  icon        String?
  color       String?
  isActive    Boolean    @default(true)
  sortOrder   Int        @default(0)
  createdBy   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  creator     User?      @relation(fields: [createdBy], references: [id])
  resources   Resource[]

  @@index([createdBy], map: "Category_createdBy_fkey")
}

model Resource {
  id          String    @id @default(cuid())
  name        String
  url         String    @db.VarChar(2048)
  description String?   @db.Text
  icon        String?
  categoryId  String?
  status      String    @default("active")
  clicks      Int       @default(0)
  createdBy   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    Category? @relation(fields: [categoryId], references: [id])
  creator     User?     @relation(fields: [createdBy], references: [id])

  @@index([categoryId], map: "Resource_categoryId_fkey")
  @@index([createdBy], map: "Resource_createdBy_fkey")
}

model PublicEvent {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  startTime   DateTime
  endTime     DateTime
  location    String?
  eventType   String   @default("general")
  isVisible   Boolean  @default(true)
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User?    @relation(fields: [createdBy], references: [id])

  @@index([createdBy], map: "PublicEvent_createdBy_fkey")
}

model InternalEvent {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  startTime   DateTime
  endTime     DateTime
  location    String?
  eventType   String?
  attendees   Json?
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User?    @relation("CreatedInternalEvents", fields: [createdBy], references: [id])

  @@index([createdBy], map: "InternalEvent_createdBy_fkey")
}

model Activity {
  id          String   @id @default(cuid())
  type        String
  title       String
  description String   @db.Text
  status      String   @default("new")
  priority    String   @default("medium")
  assignedTo  String?
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  assignee    User?    @relation("AssignedActivities", fields: [assignedTo], references: [id])
  creator     User?    @relation("CreatedActivities", fields: [createdBy], references: [id])

  @@index([assignedTo], map: "Activity_assignedTo_fkey")
  @@index([createdBy], map: "Activity_createdBy_fkey")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  dueDate     DateTime
  priority    String   @default("medium")
  status      String   @default("pending")
  assignedTo  String?
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  assignee    User?    @relation("AssignedTasks", fields: [assignedTo], references: [id])
  creator     User?    @relation("CreatedTasks", fields: [createdBy], references: [id])

  @@index([status, priority, dueDate])
  @@index([assignedTo], map: "Task_assignedTo_fkey")
  @@index([createdBy], map: "Task_createdBy_fkey")
}

model TrainingResource {
  id          String              @id @default(cuid())
  title       String
  description String?             @db.Text
  contentType ResourceContentType
  videoUrl    String?             @db.VarChar(2048)
  duration    Int?
  textContent String?             @db.LongText
  fileName    String?             @db.VarChar(255)
  fileUrl     String?             @db.VarChar(2048)
  fileSize    Int?
  mimeType    String?
  tags        String?             @db.Text
  difficulty  String?
  instructor  String?
  views       Int                 @default(0)
  isPublic    Boolean             @default(false)
  createdBy   String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  creator     User?               @relation(fields: [createdBy], references: [id])

  @@index([createdBy], map: "TrainingResource_createdBy_fkey")
}

model Announcement {
  id            String                 @id @default(cuid())
  title         String
  club          String
  date          DateTime
  time          String
  location      String?
  description   String?                @db.Text
  maxAttendees  Int?
  attendees     Int                    @default(0)
  type          String                 @default("general")
  status        String                 @default("active")
  isPublic      Boolean                @default(true)
  createdBy     String?
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
  registrations ActivityRegistration[]
  creator       User?                  @relation(fields: [createdBy], references: [id])

  @@index([createdBy], map: "Announcement_createdBy_fkey")
}

model ActivityRegistration {
  id             String       @id @default(cuid())
  announcementId String
  studentName    String
  studentEmail   String?
  studentPhone   String?
  studentClass   String?
  studentNumber  String?
  message        String?      @db.Text
  status         String       @default("pending")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  announcement   Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)

  @@index([announcementId])
  @@index([status])
}

model HistoryEvent {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  date        DateTime
  location    String?
  imageUrl    String?  @db.VarChar(2048)
  tags        String?  @db.Text
  status      String   @default("active")
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User?    @relation(fields: [createdBy], references: [id])

  @@index([date])
  @@index([status])
  @@index([createdBy], map: "HistoryEvent_createdBy_fkey")
}

model Article {
  id            String        @id @default(cuid())
  title         String
  slug          String        @unique
  content       String        @db.LongText
  excerpt       String?       @db.Text
  status        ArticleStatus @default(DRAFT)
  isPublic      Boolean       @default(true)
  publishedAt   DateTime?
  views         Int           @default(0)
  tags          String?       @db.Text
  category      String?
  featuredImage String?       @db.VarChar(2048)
  createdBy     String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  creator       User?         @relation(fields: [createdBy], references: [id])

  @@index([status, publishedAt])
  @@index([slug])
  @@index([createdBy], map: "Article_createdBy_fkey")
}

model TeamNotes {
  id        String   @id @default(cuid())
  content   String   @db.LongText
  updatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSetting {
  id        String      @id @default(cuid())
  key       String      @unique
  value     String      @db.Text
  category  String      @default("general")
  label     String?
  type      SettingType @default(STRING)
  isPublic  Boolean     @default(false)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([category])
  @@index([key])
}

enum UserRole {
  ADMIN
  HELPER
  STUDENT
}

enum ResourceContentType {
  VIDEO
  TEXT
  FILE
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SettingType {
  STRING
  NUMBER
  BOOLEAN
  JSON
}
